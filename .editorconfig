# Этот файл предназначен для унификации стиля кодирования в различных редакторах и IDE.
# Более подробная информация на https://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 120
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.sol]
indent_size = 4

[*.md]
trim_traling_whitespace = false
